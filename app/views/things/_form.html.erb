<%= form_for(@thing, html: {id: "thing-form", :'data-shopify-api-submit' => submit_message}) do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, rows: 2, cols: 30 %>
  </div>
<% end %>
